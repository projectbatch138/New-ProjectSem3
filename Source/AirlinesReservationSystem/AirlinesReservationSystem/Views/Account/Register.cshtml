    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">


        <!-- Font Icon -->
        <link rel="stylesheet" href="~/Content/Colorlib/fonts/material-icon/css/material-design-iconic-font.min.css">

        <!-- Main css -->
        <link rel="stylesheet" href="~/Content/Colorlib/css/style.css">
    </head>
    <body>


        <div class="main">

            <!-- Sign up form -->
            <section class="signup">
                <div class="container">
                    <div class="signup-content">
                        <div class="signup-form">
                            <h2 class="form-title">Sign up</h2>
                            <form method="POST" class="register-form" id="register-form">
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    @Html.TextBoxFor(m => m.UserName, new { type = "text", name = "name", id = "name", placeholder = "Your UserName" })
                                </div>
                                <div class="form-group">
                                    <label for="email"><i class="zmdi zmdi-email"></i></label>
                                    @Html.TextBoxFor(m => m.Email, new { type = "email", name = "email", id = "email", placeholder = "Your Email" })
                                </div>
                                <div class="form-group">
                                    <label for="phone"><i class="zmdi zmdi-account-box-phone"></i></label>
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { type = "phone", name = "phone", id = "phone", placeholder = "Your Phone Number" })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber)
                                </div>
                                <div class="form-group">
                                    <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                    @Html.PasswordFor(m => m.Password, new { type = "password", name = "pass", id = "pass", placeholder = "Password" })
                                </div>
                                <div class="form-group">
                                    <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { type = "password", name = "re_pass", id = "re_pass", placeholder = "Repeat your password" })
                                </div>
                                <div class="form-group form-button">
                                    <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                                </div>
                            </form>
                        </div>
                        <div class="signup-image">
                            <figure><img src="~/Content/Colorlib/images/signup-image.jpg" alt="sing up image"></figure>
                            <a href="@Url.Action("Login", "Account")" class="signup-image-link">I already have account </a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </body>
</html>
