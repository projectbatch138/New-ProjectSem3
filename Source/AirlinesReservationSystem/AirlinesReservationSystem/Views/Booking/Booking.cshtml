@model IList<Booking_Ticket>

@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    TempData["Adults"] = TempData["Adults"];
}
<div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">
            <div class="card-body">
                <h2 class="title">Adults Information Form</h2>
                @using (Html.BeginForm())
                {
                    Html.AntiForgeryToken();

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    
                        int num = (int)TempData["Adults"];
                    
                    for (int i = 0; i < num; i++)
                    {
                        <h2>Adults @(i + 1)</h2>
                        <hr />
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    @Html.LabelFor(model => Model[i].PassengerFirstName, htmlAttributes: new { @class = "label" })
                                    @Html.EditorFor(model => Model[i].PassengerFirstName, new { htmlAttributes = new { @class = "input--style-4" } })
                                    @Html.ValidationMessageFor(model => Model[i].PassengerFirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    @Html.LabelFor(model => Model[i].PassengerLastName, htmlAttributes: new { @class = "label" })
                                    @Html.EditorFor(model => Model[i].PassengerLastName, new { htmlAttributes = new { @class = "input--style-4" } })
                                    @Html.ValidationMessageFor(model => Model[i].PassengerLastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    @Html.LabelFor(model => Model[i].PassengerNumberId, htmlAttributes: new { @class = "label" })
                                    @Html.EditorFor(model => Model[i].PassengerNumberId, new { htmlAttributes = new { @class = "input--style-4" } })
                                    @Html.ValidationMessageFor(model => Model[i].PassengerNumberId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Gender</label>
                                    <div class="p-t-10">
                                        <label class="radio-container m-r-45">
                                            Male
                                            <input type="radio" checked="checked" name="gender @i">
                                            <span class="checkmark"></span>
                                        </label>
                                        <label class="radio-container">
                                            Female
                                            <input type="radio" name="gender @i">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    @Html.LabelFor(model => Model[i].PassengerEmail, htmlAttributes: new { @class = "label" })
                                    @Html.EditorFor(model => Model[i].PassengerEmail, new { htmlAttributes = new { @class = "input--style-4" } })
                                    @Html.ValidationMessageFor(model => Model[i].PassengerEmail, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    @Html.LabelFor(model => Model[i].PassengerPhoneNumber, htmlAttributes: new { @class = "label" })
                                    @Html.EditorFor(model => Model[i].PassengerPhoneNumber, new { htmlAttributes = new { @class = "input--style-4" } })
                                    @Html.ValidationMessageFor(model => Model[i].PassengerPhoneNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                    }
                    <div class="p-t-15">
                        <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

