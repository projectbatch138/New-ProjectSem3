@model AirlinesReservationSystem.ViewModels.FlightViewModel

    <section id="first-tab-group" class="tabgroup">
        <div id="tab1">
            <div class="submit-form">
                <h4>Check availability for direction</h4>
                <hr />

                @using (Html.BeginForm("SearchFlight", "Flights", FormMethod.Post, new { @class = "ui large form" }))
                {
                    @Html.AntiForgeryToken()
                    
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Location_Depart, "From:", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Location_Depart, (IEnumerable<SelectListItem>)TempData["DataDepart"], "Select Depart", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Location_Depart, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Location_Arrival, "To:", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Location_Arrival, (IEnumerable<SelectListItem>)TempData["DataArrival"], "Select Arrival", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Location_Arrival, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Time_Depart, "Depart", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Time_Depart, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Time_Depart, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Time_Arrival, "Return", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Time_Arrival, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Time_Arrival, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Trip, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            One Way
                            @Html.RadioButtonFor(model => model.Trip, "OneWay")
                            Round
                            @Html.RadioButtonFor(model => model.Trip, "Round")
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Search" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }

            </div>
        </div>
    </section>

